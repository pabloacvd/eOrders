<AnchorPane id="AnchorPane" prefHeight="700" prefWidth="1000" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ar.com.xeven.OrdenesViewController">
    <children>
       <Label alignment="TOP_CENTER" contentDisplay="CENTER" prefHeight="35.0" prefWidth="800.0" text="Detalle de órdenes electrónicas" textAlignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0" />
       <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="800.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="30.0">
        <items>
          <AnchorPane minHeight="0.0" minWidth="0.0">
             <children>
                 <TableView fx:id="orderTable" prefWidth="218.0" tableMenuButtonVisible="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                   <columns>
                       <TableColumn fx:id="orderIDCol" maxWidth="200.0" minWidth="100.0" prefWidth="100.0" text="ID orden" />
                       <TableColumn fx:id="contactNameCol" maxWidth="400.0" minWidth="100.0" prefWidth="150.0" text="Nombre" />
                       <TableColumn fx:id="contactPhoneCol" editable="false" maxWidth="300.0" minWidth="100.0" prefWidth="150.0" sortable="false" text="Telefono" />
                       <TableColumn fx:id="deliveryDateCol" maxWidth="200.0" minWidth="120.0" prefWidth="120.0" text="Fecha de entrega" />
                       <TableColumn fx:id="statusCol" editable="false" maxWidth="150.0" minWidth="100.0" prefWidth="100.0" text="Estado" />
                   </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
               </TableView>
             </children>
          </AnchorPane>
          <AnchorPane minHeight="50.0" minWidth="100.0" prefHeight="398.0" prefWidth="273.0">
             <children>
                 <GridPane alignment="CENTER_LEFT" focusTraversable="true" AnchorPane.bottomAnchor="5" AnchorPane.leftAnchor="5" AnchorPane.rightAnchor="5" AnchorPane.topAnchor="5">
                     <columnConstraints>
                         <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="150.0" />
                         <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="150.0" />
                         <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="150.0" />
                         <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="150.0" />
                         <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="150.0" />
                         <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="150.0" />
                     </columnConstraints>
                     <rowConstraints>
                         <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                         <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                         <RowConstraints minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES" />
                         <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                         <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                         <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                         <Label text="Número de orden: " GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="0" />
                         <Label fx:id="orderID" text="" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                         <Label text="Nombre de contacto:" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" />
                         <TextField fx:id="contactName" GridPane.columnIndex="3" GridPane.rowIndex="0" />
   
                         <Label text="Fecha de entrega:" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                         <DatePicker fx:id="deliveryDate" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                         <Label text="Teléfono:" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                         <TextField fx:id="contactPhone" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                         <Label text="Observaciones:" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
                         <Label text="Total:" GridPane.columnIndex="4" GridPane.halignment="CENTER" GridPane.rowIndex="0" />
                         <Label fx:id="totalAmount" GridPane.columnIndex="5" GridPane.halignment="LEFT" GridPane.rowIndex="0" />
                         <Label text="Monto abonado:" GridPane.columnIndex="4" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                         <TextField fx:id="paidAmount" maxWidth="200.0" minWidth="100.0" prefWidth="200.0" GridPane.columnIndex="5" GridPane.halignment="LEFT" GridPane.rowIndex="1" />
                         <Label text="Deuda:" textFill="#5e0606" GridPane.columnIndex="4" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                         <Label fx:id="pendingAmount" GridPane.columnIndex="5" GridPane.halignment="LEFT" GridPane.rowIndex="2" />
   
                         <Label text="Detalles de entrega:" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
                         <TextArea fx:id="detallesEntrega" prefHeight="100.0" prefWidth="100.0" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.rowSpan="2" />
   
                         <Label text="Estado:" GridPane.columnIndex="4" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
                         <ComboBox fx:id="status" GridPane.columnIndex="5" GridPane.rowIndex="3" />
   
                         <Label contentDisplay="CENTER" text="ACA VA EL DETALLE DE CADA LINEA DE PRODUCTO, COMO UNA TABLA ADICIONAL" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
   
                         <HBox prefHeight="100.0" spacing="15" GridPane.columnIndex="5" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="CENTER">
      <children>
                               <Button fx:id="btn_saveChanges" mnemonicParsing="false" onAction="#btn_saveChanges_pressed" text="Guardar cambios" />
      </children>
                        </HBox>
                        <TextArea prefHeight="100.0" prefWidth="100.0" wrapText="true" GridPane.columnIndex="3" GridPane.rowIndex="2" GridPane.rowSpan="2" />
                     </children>
                 </GridPane>
             </children>
          </AnchorPane>
        </items>
      </SplitPane>
   </children>
</AnchorPane>
